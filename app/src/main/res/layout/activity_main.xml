<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFF"
        android:weightSum="11"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:id="@+id/result_txtView"
            android:textSize="48sp"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:textColor="#000"
            android:singleLine="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/operation_txtView"
            android:layout_weight="10"
            android:textSize="24sp"
            android:textColor="#000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="+/-"
            android:textColor="#FFF"
            android:textSize="32sp"

            android:id="@+id/negative_switch_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="%"
            android:textColor="#FFF"
            android:textSize="32sp"

            android:id="@+id/percent_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="AC"
            android:textColor="#FFF"
            android:textSize="32sp"

            android:id="@+id/ac_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="C"
            android:textColor="#FFF"
            android:textSize="32sp"

            android:id="@+id/clear_btn" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:layout_weight="1"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="32sp"
            android:onClick="numBtnPressed"
            android:id="@+id/one_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:layout_weight="1"
            android:text="2"
            android:textColor="#FFF"
            android:textSize="32sp"
            android:onClick="numBtnPressed"
            android:id="@+id/two_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="3"
            android:textColor="#FFF"
            android:textSize="32sp"
            android:onClick="numBtnPressed"
            android:id="@+id/three_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="/"
            android:textColor="#FFF"
            android:textSize="32sp"

            android:id="@+id/div_btn" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="4"
            android:textColor="#FFF"
            android:textSize="32sp"
            android:onClick="numBtnPressed"
            android:id="@+id/four_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:onClick="numBtnPressed"
            android:text="5"
            android:textColor="#FFF"
            android:textSize="32sp"

            android:id="@+id/five_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="6"
            android:textColor="#FFF"
            android:textSize="32sp"
            android:onClick="numBtnPressed"
            android:id="@+id/six_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="*"
            android:textColor="#FFF"
            android:textSize="32sp"

            android:id="@+id/mult_btn" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="7"
            android:textColor="#FFF"
            android:textSize="32sp"
            android:onClick="numBtnPressed"
            android:id="@+id/seven_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="8"
            android:textColor="#FFF"
            android:textSize="32sp"
            android:onClick="numBtnPressed"
            android:id="@+id/eight_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="9"
            android:textColor="#FFF"
            android:textSize="32sp"
            android:onClick="numBtnPressed"
            android:id="@+id/nine_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#FFF"
            android:textSize="32sp"

            android:id="@+id/minus_btn" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="."
            android:textColor="#FFF"
            android:textSize="32sp"

            android:id="@+id/dot_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#FFF"
            android:textSize="32sp"
            android:onClick="numBtnPressed"
            android:id="@+id/zero_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="="
            android:textColor="#FFF"
            android:textSize="32sp"

            android:id="@+id/eql_btn" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_weight="1"
            android:text="+"
            android:textColor="#FFF"
            android:textSize="32sp"

            android:id="@+id/add_btn" />

    </LinearLayout>

</LinearLayout>
